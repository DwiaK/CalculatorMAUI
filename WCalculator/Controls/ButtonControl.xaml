<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WCalculator.Controls.ButtonControl">

    <Button x:Name="Text" Margin="10" FontSize="20">
        <Button.ImageSource>
            <FileImageSource File="{Binding ImgSource}"/>
        </Button.ImageSource>
        <Button.Shadow>
            <Shadow Brush="Black"
                        Offset="0,10"
                        Radius="40"
                        Opacity="0.2"/>
        </Button.Shadow>
        <Button.Background>
            <LinearGradientBrush EndPoint="0,1">
                <GradientStop Color="#282730"
                          Offset="0.1" />
                <GradientStop Color="#2b2a32"
                          Offset="1.0" />
            </LinearGradientBrush>
        </Button.Background>
    </Button>

</ContentView>
